{
  "family": "backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::630147069059:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::630147069059:role/backend-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "630147069059.dkr.ecr.us-east-1.amazonaws.com/event-registry-backend-staging:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [],
      "secrets": [
        {
          "name": "DJANGO_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/DJANGO_SECRET_KEY"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/DATABASE_URL"
        },
        {
          "name": "AWS_S3_BUCKET",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/AWS_S3_BUCKET"
        },
        {
          "name": "AWS_S3_REGION_NAME",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/AWS_S3_REGION_NAME"
        },
        {
          "name": "ALLOWED_HOSTS",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/ALLOWED_HOSTS"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/CORS_ALLOWED_ORIGINS"
        },
        {
          "name": "FRONTEND_ORIGIN",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/FRONTEND_ORIGIN"
        },
        {
          "name": "SES_REGION",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/SES_REGION"
        },
        {
          "name": "SES_FROM_EMAIL",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/SES_FROM_EMAIL"
        },
        {
          "name": "WHATSAPP_ENABLED",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/WHATSAPP_ENABLED"
        },
        {
          "name": "DEBUG",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/DEBUG"
        },
        {
          "name": "CLOUDFRONT_IMAGE_DOMAIN",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/CLOUDFRONT_IMAGE_DOMAIN"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/event-registry-staging/backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

