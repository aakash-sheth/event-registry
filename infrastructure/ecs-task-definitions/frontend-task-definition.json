{
  "family": "frontend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::630147069059:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::630147069059:role/frontend-task-role",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "630147069059.dkr.ecr.us-east-1.amazonaws.com/event-registry-frontend-staging:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [],
      "secrets": [
        {
          "name": "BACKEND_API_BASE",
          "valueFrom": "arn:aws:ssm:us-east-1:630147069059:parameter/event-registry-staging/BACKEND_API_BASE"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/event-registry-staging/frontend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3000/', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)}).on('error', () => process.exit(1))\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

